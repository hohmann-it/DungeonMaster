<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.hohmannit</groupId>
    <artifactId>ddhub-root</artifactId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>

  <artifactId>ddhub</artifactId>
  <packaging>pom</packaging>
  <name>DD Hub</name>

  <properties>
    <com.hohmannit.ddhub.version>${project.version}</com.hohmannit.ddhub.version>
    <jdk.source.version>17</jdk.source.version>
    <org.eclipse.scout.rt.version>22.0.41</org.eclipse.scout.rt.version>
    <master_npm_release_dependency_mapping>--mapping.0.regex=@eclipse-scout --mapping.0.version=${org.eclipse.scout.rt.version}</master_npm_release_dependency_mapping>
  </properties>

  <modules>
    <module>../ddhub.shared</module>
    <module>../ddhub.server</module>
    <module>../ddhub.client</module>
    <module>../ddhub.server.app.war</module>
    <module>../ddhub.server.app.dev</module>
    <module>../ddhub.ui.html</module>
    <module>../ddhub.ui.html.app.war</module>
    <module>../ddhub.ui.html.app.dev</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <!-- Scout Dependencies -->
      <dependency>
        <groupId>org.eclipse.scout.rt</groupId>
        <artifactId>org.eclipse.scout.rt</artifactId>
        <version>${org.eclipse.scout.rt.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>

      <!-- Application Dependencies -->
      <dependency>
        <groupId>com.hohmannit</groupId>
        <artifactId>ddhub.client</artifactId>
        <version>${com.hohmannit.ddhub.version}</version>
      </dependency>
      <dependency>
        <groupId>com.hohmannit</groupId>
        <artifactId>ddhub.shared</artifactId>
        <version>${com.hohmannit.ddhub.version}</version>
      </dependency>
      <dependency>
        <groupId>com.hohmannit</groupId>
        <artifactId>ddhub.server</artifactId>
        <version>${com.hohmannit.ddhub.version}</version>
      </dependency>
      <dependency>
        <groupId>com.hohmannit</groupId>
        <artifactId>ddhub.ui.html</artifactId>
        <version>${com.hohmannit.ddhub.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
</project>
